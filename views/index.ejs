<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://use.fontawesome.com/98000a15f8.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital@1&display=swap" rel="stylesheet">
    <title>login page</title>
</head>
<body>
<!-- white-background -->
    <div class="main main__image">
        <p class="para">APPX</p>
       <div class="main-1">
        <p class="para__1">The Hub of Everything</p>
       </div>
<!-- login-form container-->
       <form class="login-details" action="#" method="POST">
           <!-- login-image -->
           <div class="img-container">
            <a href="https://github.com/FortAwesome/Font-Awesome"></a><i class="fa fa-user fa-5x" aria-hidden="true"></i>
           </div>
 <!-- user login details container-->
        <div class="user-detail">
<!-- user-name-->
            <i class="fa fa-envelope icon " aria-hidden="true"></i>
            <input type="text" class="email"placeholder="Email" name="username" required>
<!-- password -->
            <i class="fa fa-key icon" aria-hidden="true"></i>
            <input type="password" class="psw"placeholder="Password" name="psw" required> <i class="fa fa-eye-slash" aria-hidden="true"></i>
            <button type="submit" class="login">Login</button>
        </div>
<!-- check-box -->
        <label for="checkbox--name"><input type="checkbox" class="checkbox" name="remember"> Remember me</label>
<!--cancel-critreia container  -->
        <div class="delete">
<!--concel button  -->
            <button type="button" class="cancel">Cancel</button>
<!-- psw forgot -->
            <a  class="frgpsw" href="#">Forgot Password ?</a>
        </div>
       </form>
    </div>
    
</body>
</html>
